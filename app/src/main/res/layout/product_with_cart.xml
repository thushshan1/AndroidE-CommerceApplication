<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/nametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/img1"

            android:text="@string/pn"
            android:textColor="@color/black"
            android:textSize="25sp"

            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/Brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Price"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/img1"
            android:text="@string/B"
            android:textColor="@color/black"

            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Price"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/nametext"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/img1"
            android:text="@string/p"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/text_price"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/nametext"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/Price"
            android:text="$"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/Count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Brand"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/img1"
            android:background="@drawable/bg_goods_num"
            android:text="1"
            android:hint="Count"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_reduce_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/Count"
            android:layout_below="@id/Brand"
            android:background="@drawable/bg_reduce_goods_num"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:text="â€”"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tv_increase_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Count"
            android:layout_below="@id/Brand"
            android:background="@drawable/bg_increase_goods_num"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="+"
            android:textColor="#000"
            android:textSize="25sp" />
        <Button
            android:id="@+id/CountAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Brand"
            android:layout_marginStart="49dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/tv_increase_goods_num"
            android:text="Add"
            android:textSize="25sp" />


</RelativeLayout>



</androidx.cardview.widget.CardView>